{
	"name": "pedidosinteligentes",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run db:start && npm run services:wait:database && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run db:start && concurrently -n vite,vitest --hide vite -k -s command-vitest \"npm run dev\" \"vitest -- --run\"",
		"posttest": "docker compose stop",
		"services:wait:database": "node src/lib/scripts/wait-for-postgres.js",
		"db:start": "docker compose up -d",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@faker-js/faker": "^10.0.0",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/kit": "^2.37.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.4",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.13",
		"@types/async-retry": "^1.4.9",
		"@types/node": "^24",
		"@types/set-cookie-parser": "^2.4.10",
		"@types/validator": "^13.15.3",
		"@vitest/browser": "^3.2.4",
		"concurrently": "^9.2.1",
		"daisyui": "^5.1.9",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.2",
		"globals": "^16.3.0",
		"playwright": "^1.55.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"set-cookie-parser": "^2.7.1",
		"svelte": "^5.38.7",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^7.1.5",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"dependencies": {
		"argon2": "^0.44.0",
		"async-retry": "^1.3.3",
		"dotenv": "^17.2.2",
		"drizzle-orm": "^0.44.5",
		"postgres": "^3.4.7",
		"uuid": "^13.0.0",
		"validator": "^13.15.15",
		"zod": "^4.1.5"
	}
}
